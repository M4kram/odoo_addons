<odoo>
    <record id="etudiant_tree_view" model="ir.ui.view">
        <field name="name">Etudiants</field>
        <field name="model">etudiant</field>
        <field name="arch" type="xml">
            <tree>
                <field name="id" string="#"/>
                <field name="prenom" optional="show"/>
                <field name="nom" optional="hide"/>
                <field name="date_naissance"/>
                <field name="age"/>
                <field name="classe_id"/>
                <field name="inscrit" />
            </tree>
        </field>
    </record>

    <record id="etudiant_form_view" model="ir.ui.view">
        <field name="name">Etudiants</field>
        <field name="model">etudiant</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="inscrit" widget="statusbar" options="{'clickable': '1'}" />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="prenom" string="PrÃ¨nom *"/>
                            <field name="nom"/>
                            <field name="date_naissance"/>
                            <!-- <field name="state" widget="radio"/>-->
                        </group>
                        <group>
                            <field name="age"/>
                            <field name="classe_id"/>
                            <!-- <field name="skill_ids" widget="many2many_tags"/> -->
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>