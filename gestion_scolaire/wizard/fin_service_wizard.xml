<odoo>   

    <record id="fin_service_wizard_form_view" model="ir.ui.view">
        <field name="name">fin.service.wizard.form.view</field>
        <field name="model">fin.service.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="formateur_id"/>
                        </group>
                        <group>
                            <field name="nouveau_formateur_id"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button
                        name="button_replace"
                        type="object"
                        string="Remplacer"
                        class="btn-danger"
                        confirm="Êtes-vous sûr de vouloir remplacer ce formateur?"
                    />
                    <button
                        special="cancel"
                        string="Annuler"
                        class="btn-secondary"
                    />
                </footer>
            </form>
        </field>
    </record>
</odoo>
